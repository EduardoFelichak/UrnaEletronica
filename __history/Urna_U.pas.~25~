{$R *.dfm}

procedure TfrmUrna.btn0Click(Sender: TObject);
var
  n1 : String;
  n2 : String;
begin
  n1 := edtN1.Text;
  n2 := edtN2.Text;

  if n1.Length < 1 then
    edtN1.Text := '0'
  else
  begin
    edtN2.Text := '0';
    ValidarDados();
  end;
end;

procedure TfrmUrna.btn1Click(Sender: TObject);
var
  n1 : String;
  n2 : String;
begin
